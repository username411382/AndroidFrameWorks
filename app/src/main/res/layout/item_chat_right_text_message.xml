<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_chat_time"
        android:padding="5dp"
        android:text="2016-12-12 13:40"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">

        <com.ruihe.demo.common.utils.view.RoundedImageView
            android:id="@+id/rv_user_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_def_portrait_right"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_item_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/rv_user_head"
            android:background="@drawable/ic_bubble_right_text"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:text="哈哈"
            android:textColor="#ffffff" />
    </RelativeLayout>


</LinearLayout>
