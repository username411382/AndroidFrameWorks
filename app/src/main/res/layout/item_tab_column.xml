<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ly_item_column"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/selector_list_view_item_bg"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/ly_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab_head_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐" />

            <TextView
                android:id="@+id/tv_tab_head_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tab_head_food_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量/规格"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tab_head_food_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />


</LinearLayout>