<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:padding="10dp"
    android:background="#f2f2f2" >

    <com.ruihe.demo.common.utils.view.CircularProgressView
        android:id="@+id/cpv_footer_load"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        app:cpv_color="@color/txt_gray"
        app:cpv_animAutostart="false"
        app:cpv_indeterminate="true"
        app:cpv_capRound="true"
        app:cpv_thickness="4dp" />

    <TextView
        android:id="@+id/tv_footer_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="没有更多数据了..."
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/text_size_large_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_footer_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="加载失败，点击重试"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/text_size_large_small"
        android:visibility="gone" />

</RelativeLayout>